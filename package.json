{
  "name": "@onamfc/mcp-github-integration",
  "version": "1.0.0",
  "description": "GitHub API client for MCP server integration",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/onamfc/mcp-github-integration.git"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npx -p typescript tsc",
    "dev": "npx -p typescript tsc --watch",
    "test": "NODE_OPTIONS='--experimental-vm-modules' npx vitest run",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' npx vitest",
    "test:ui": "NODE_OPTIONS='--experimental-vm-modules' npx vitest --ui",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' npx vitest run --coverage",
    "example:basic": "node dist/examples/basic-usage.js",
    "example:setup-repo": "node dist/examples/setup-new-repo.js"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "@octokit/types": "^12.4.0",
    "@onamfc/developer-log": "^1.0.0",
    "@onamfc/pkg-inspect": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "@vitest/ui": "^4.0.10",
    "typescript": "^5.9.3",
    "vitest": "^4.0.10"
  }
}
